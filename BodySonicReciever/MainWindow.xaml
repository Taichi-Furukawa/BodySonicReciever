<Window x:Class="BodySonicReciever.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BodySonicReciever"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="ComportNameBox" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" MouseEnter="ComportNameBox_MouseEnter"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="185,10,0,0" VerticalAlignment="Top" Width="75" Click="connectButton_Click"/>
        <Button x:Name="disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="281,10,0,0" VerticalAlignment="Top" Width="75" Click="disconnect_Click"/>
    </Grid>
</Window>
